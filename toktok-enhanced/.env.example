# TokTok Enhanced Bot Configuration
# Copy this file to .env and fill in your actual values

# =================== TELEGRAM CONFIGURATION ===================
# Your Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram Chat ID for notifications (can be your user ID)
TELEGRAM_CHAT_ID=your_chat_id_here

# Admin User IDs (comma separated)
ADMIN_USER_IDS=123456789,987654321

# =================== API CONFIGURATION ===================
# API Base URL (change if running on different port/domain)
API_BASE_URL=http://localhost:8080

# Database URL (SQLite default, change for MySQL/PostgreSQL)
DATABASE_URL=sqlite:///data/enhanced_toktok.db

# =================== NOTIFICATION CONFIGURATION ===================
# Email SMTP Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=admin@example.com,support@example.com

# Webhook URLs for notifications (optional, comma separated)
WEBHOOK_URLS=https://webhook.site/unique-id,https://discord.com/api/webhooks/xxx

# =================== CLOUD STORAGE CONFIGURATION ===================
# Google Drive Configuration (optional)
CLOUD_FOLDER_ID=your_google_drive_folder_id

# =================== PAYMENT CONFIGURATION ===================
# Midtrans Payment Gateway (optional)
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_ENV=sandbox  # or production

# Xendit Payment Gateway (optional)
XENDIT_SECRET_KEY=your_xendit_secret_key
XENDIT_PUBLIC_KEY=your_xendit_public_key

# =================== SECURITY CONFIGURATION ===================
# Rate limiting (requests per minute/hour)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session timeout (seconds)
SESSION_TIMEOUT=3600

# =================== LOGGING CONFIGURATION ===================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file rotation settings
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =================== DEVELOPMENT CONFIGURATION ===================
# Debug mode (true/false)
DEBUG_MODE=false

# Development environment
ENVIRONMENT=development  # development, staging, production